<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @trip.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @trip.description %></dd>
</dl>

<table class="table tabe-striped">
  <thead>
    <tr>
      <th>Destination</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @trip.destinations.each do |destination| %>
      <tr>
        <td><%= link_to destination.name, edit_trip_destination_path(@trip, destination) %></td>
        <td><%= destination.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to   'New Destination',
              new_trip_destination_path(@trip),
              :class => 'btn btn-primary' %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              trips_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_path(@trip), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_path(@trip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
